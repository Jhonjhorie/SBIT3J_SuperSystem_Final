<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Styles/_AdminMonitoring_Layout.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
   
</head>
<body>
    <nav>
        <ul>
            <li>
                <a href="@Url.Action("Dashboard", "AdminMonitoring")" class="logo-container">
                    <img src="~/Image/Group1-Assets/received_594167488046920.png" />
                    <span class="nav-item">Down Town Alley Sales Monitoring</span>
                </a>
            </li>
            <li id="admin-profile">
            </li>
            <li>
                <a href="@Url.Action("SalesRevenue", "AdminMonitoring")" class="menu-container">
                    <img src="~/Image/Group1-Assets/RevenueIcon.png" />
                    <span class="nav-item">Sales Revenue</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("ProductRevenue", "AdminMonitoring")" class="menu-container">
                    <img src="~/Image/Group1-Assets/InventoryIcon.png" />
                    <span class="nav-item">Product Revenue</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Profit", "AdminMonitoring")" class="menu-container">
                    <img src="~/Image/Group1-Assets/ProfitIcon.png" />
                    <span class="nav-item">Profit</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Losses", "AdminMonitoring")" class="menu-container">
                    <img src="~/Image/Group1-Assets/LossesIcon.png" />
                    <span class="nav-item">Losses</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("CashierLogs", "AdminMonitoring")" class="menu-container">
                    <img src="~/Image/Group1-Assets/CashierLogIcon.png" />
