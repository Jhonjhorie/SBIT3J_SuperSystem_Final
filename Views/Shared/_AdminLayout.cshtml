                </a>
            </li>
            <li>
                <a href="@Url.Action("OverallActivities", "AdminMonitoring")" class="menu-container">
                    <img src="~/Image/Group1-Assets/OveallActivityIcon.png" />
                    <span class="nav-item">Overall Activities</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Inventory", "AdminMonitoring")" class="menu-container">
                    <img src="~/Image/Group1-Assets/InventoryIcon.png" />
                    <span class="nav-item">Inventory</span>
                </a>
            </li>
            <li id="logout-link">
                <a href="@Url.Action("Logout", "Accounts")" class="menu-container">
                    <img src="~/Image/Group1-Assets/LogoutIcon.png" />
                    <span class="nav-item">Logout</span>
                </a>
            </li>
        </ul>

    </nav>

    <div class="renderbody" id="renderbody" style="margin-left:120px; padding: 20px;">
        @RenderBody()
    </div>

</body>
</html>
